mixin sidebar()
  .sidebar.js-sidebar
    .sidebar__title
      +title({
        text: "Фильтры для поиска",
        type: "closed",
        jsClass: "js-sidebar__title",
        targetClass: "sidebar"
      })
    aside.sidebar__wrapper.js-sidebar__wrapper
      .sidebar__date-filter
        +datepicker({
          input: {
            total: {
              title: { text: "даты пребывания в отеле" },
              input: {
                attr: {
                  type: "text",
                  placeholder: "ДД.ММ.ГГГГ",
                  value: "19 авг - 23 авг",
                  readonly: "readonly"
                },
                length: "average",
                type: "dropdown",
                jsClass: "js-input__field_total"
              }
            }
          },
          main: {
            jsClass: "js-datepicker",
            dataYear: "2019",
            dataMonth: "7",
            dataCurrentDay: "2019, 8, 9",
            dataFrom: "2019, 8, 19",
            dataTo: "2019, 8, 23",
          },
          attr: {
            "hidden": "hidden"
          },
          size: "small"
        })
      .sidebar__guests
        +dropdown({
          inputSettings: {
            title: { text: "Гости" },
            input: {
              attr: {
                type: "text",
                placeholder: "Text",
                value: "3 гостя, 1 младенец",
                readonly: "readonly",
              },
              length: "average",
              type: "dropdown",
              jsClass: "js-input__field"
            }
          },
          control: {
            attr: { "hidden": "hidden" }
          },
          lists: [
            { text: "взрослые", dataTarget: "adult", output: "2" },
            { text: "дети", dataTarget: "child", output: "1" },
            { text: "младенцы", dataTarget: "baby", output: "1" }
          ],
          main: {
            dataType: "guestsWithBaby",
            outputType: "twoByOne"
          }
        })
      .sidebar__slider
        +slider({
          title: "диапазон цены",
          outputJs: "js-slider__output",
          containerJs: "js-slider__body",
          description: "Стоимость за сутки пребывания в номере"
        })
      .sidebar__additional-features
        .sidebar__features-title
          +title({
            text: "правила дома"
          })
        +toggle({
          controller: {
            type: "checkbox",
            attr: {
              "type": "checkbox",
              "hidden": "hidden"
            }
          },
          text: {
            text: "Можно курить"
          }
        })
        +toggle({
          controller: {
            type: "checkbox",
            attr: {
              "type": "checkbox",
              "hidden": "hidden",
              "checked": "checked"
            }
          },
          text: {
            text: "Можно с питомцами"
          }
        })
        +toggle({
          controller: {
            type: "checkbox",
            attr: {
              "type": "checkbox",
              "hidden": "hidden",
              "checked": "checked"
            }
          },
          text: {
            text: "Можно пригласить гостей (до 10 человек)",
            length: "short"
          }
        })
      .sidebar__availability
        +list({
          title: {
            text: "доступность",
          },
          js: false,
          listCheckbox: [
            {
              controller: {
                type: "checkbox",
                attr: {
                  "type": "checkbox",
                  "hidden": "hidden"
                },
              },
              text: {
                text: "Ширина коридоров в номере не менее 91 см.",
                richText: "Широкий коридор",
                length: "short"
              }
            },
            {
              controller: {
                type: "checkbox",
                attr: {
                  "type": "checkbox",
                  "hidden": "hidden"
                },
              },
              text: {
                text: "На 1 этаже вас встретит специалист  и проводит до номера.",
                richText: "Помощник для инвалидов",
              }
            },
          ],
          container: false
        })
      .sidebar__room-amenities
        +dropdown({
          inputSettings: {
            title: { text: "удобства номера" },
            input: {
              attr: {
                type: "text",
                placeholder: "Text",
                value: "2 спальни, 2 кровати...",
                readonly: "readonly"
              },
              length: "average",
              type: "dropdown",
              jsClass: "js-input__field"
            }
          },
          control: {
            attr: { "hidden": "hidden" }
          },
          lists: [
            { text: "спальни", dataTarget: "bedroom", output: "2" },
            { text: "кровати", dataTarget: "bed", output: "2" },
            { text: "ванные комнаты", dataTarget: "bathroom", output: "0" }
          ],
          main: {
            dataType: "rooms",
            outputType: "oneByOne"
          }
        })
      .sidebar__additional-amenities
        +list({
          title: {
            text: "дополнительные удобства",
            type: "closed",
          },
          container: {
            attr: { "hidden": "hidden" }
          },
          js: {
            main: "js-list",
            title: "js-title",
            list: "js-list__container"
          },
          listCheckbox: [
            {
              controller: {
                type: "checkbox",
                attr: {
                  "type": "checkbox",
                  "hidden": "hidden"
                },
              },
              text: {
                text: "Завтрак",
              }
            },
            {
              controller: {
                type: "checkbox",
                attr: {
                  "type": "checkbox",
                  "hidden": "hidden",
                  "checked": "checked"
                },
              },
              text: {
                text: "Письменный стол",
              }
            },
            {
              controller: {
                type: "checkbox",
                attr: {
                  "type": "checkbox",
                  "hidden": "hidden",
                  "checked": "checked"
                },
              },
              text: {
                text: "Стул для кормления",
              }
            },
            {
              controller: {
                type: "checkbox",
                attr: {
                  "type": "checkbox",
                  "hidden": "hidden",
                  "checked": "checked"
                },
              },
              text: {
                text: "Кроватка",
              }
            },
            {
              controller: {
                type: "checkbox",
                attr: {
                  "type": "checkbox",
                  "hidden": "hidden"
                },
              },
              text: {
                text: "Телевизор",
              }
            },
            {
              controller: {
                type: "checkbox",
                attr: {
                  "type": "checkbox",
                  "hidden": "hidden",
                },
              },
              text: {
                text: "Шампунь",
              }
            },
          ]
        })