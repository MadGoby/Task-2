mixin page-header(settings)
  - const {
  -   headerClass = "",
  -   boldLink = false
  - } = settings
  - const links = [
  -   { "text": "О нас" },
  -   { "text": "Услуги", "type": "expanded" },
  -   { "text": "Вакансии" },
  -   { "text": "Новости" },
  -   { "text": "Соглашения", "type": "expanded" }
  - ]
  - if (boldLink) links[Number(boldLink - 1)].type = "text_bold"
  header(class=headerClass)
    +header({
      navigationLinks: links,
    })