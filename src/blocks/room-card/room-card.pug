mixin room-card(settings)
  - let {
  -   jsClass = "",
  -   images = [
  -     {
  -       src: "img/for-change.jpg",
  -       alt: "Alt for change"
  -     },
  -     {
  -       src: "img/for-change.jpg",
  -       alt: "Alt for change"
  -     },
  -     {
  -       src: "img/for-change.jpg",
  -       alt: "Alt for change"
  -     },
  -     {
  -       src: "img/for-change.jpg",
  -       alt: "Alt for change"
  -     }
  -   ],
  -   roomInformation: {
  -     number: roomNumber = "000",
  -     price: roomPrice = "000",
  -     type: roomType = false
  -   },
  -   starsRating: { 
  -     rating: starsCounter = "5",
  -     jsClass: starsJs = ""
  -   },
  -   reviewsCounter: { value: counterValue = "000"} 
  - } = settings
  div(class="room-card" class=jsClass)
    div.room-card__image-wrapper
      each image in images
        - let {img="", src=""} = image
        img(class="room-card__image" src=src, alt=alt)
      button(type="button" class="room-card__image-button room-card__image-button_side_left")
      button(type="button" class="room-card__image-button room-card__image-button_side_rigth")
      .room-card__image-position-wrapper
        span.room-card__image-position.room-card__image-position_selected
        span.room-card__image-position
        span.room-card__image-position
        span.room-card__image-position
    .room-card__room-information
      .room-card__price
        +room-information({
          number: roomNumber,
          price: roomPrice,
          type: roomType
        })
      .room-card__rating
        .room-card__stars
          +stars-rating({rating: starsCounter, jsClass: starsJs})
        .room-card__counter
          +reviews-counter({value: counterValue})