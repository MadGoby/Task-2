mixin radio-button(settings)
  - const {
  -   text = "for change",
  -   isChecked = false,
  -   name = "for change",
  -   value = "for change",
  - } = settings
  - const checkedAttr = isChecked ? { "checked": "checked" } : {}
  label.radio-button
    input.radio-button__controller(type="radio", name=name, value=value, hidden)&attributes(checkedAttr)
    span.radio-button__border
    span.radio-button__text-wrapper
      span.radio-button__text=text