mixin final-booking(settings)
  - let {
  -   action = "./for-change",
  -   roomInfo: {
  -     number: roomNumber = "000",
  -     price: roomPrice = "000",
  -     type: roomType = false
  -   },
  -   period: {
  -     from: {
  -       title: fromTitle = "For change",
  -       value: fromValue = "ДД.ММ.ГГГГ",
  -       jsClass: fromJs = "js-for-change"
  -     },
  -     to: {
  -       title: toTitle = "For change",
  -       value: toValue = "ДД.ММ.ГГГГ",
  -       jsClass: toJs = "js-for-change"
  -     },
  -     jsDatepicker = "js-for-change"
  -   },
  -   guests: {
  -     title: { text: guestsTitle = "For change" },
  -     input: {
  -       value: guestsInputValue = "For Change",
  -       jsClass: guestsInputJs = "js-for-change"
  -     },
  -     control: { jsClass: guestsControlJs = "js-for-change" },
  -     lists: guestsLists = [
  -       {text: "For change 1", dataTarget: "for-change-1", output: "0"},
  -       {text: "For change 2", dataTarget: "for-change-2", output: "0"},
  -       {text: "For change 3", dataTarget: "for-change-3", output: "0"}
  -     ]
  -   },
  -   serviceList = [
  -     {
  -       title: "For change 1",
  -       price: "111",
  -       sign: false,
  -       type: ""
  -     },
  -     {
  -       title: "For change 2",
  -       price: "222",
  -       sign: true,
  -       type: ""
  -     },
  -     {
  -       title: "Итого",
  -       price: "333",
  -       type: "total"
  -     }
  -   ],
  -   confirm: { text: confirmText = "For Change" }
  - } = settings
  form(class="final-booking" action=action)
    .final-booking__room-info
      +room-info({
        number: roomNumber,
        price: roomPrice,
        type: roomType
      })
    .final-booking__period
      .final-booking__from
        +input({
          title: {text: fromTitle},
          input: {
            attr: {
              type: "text",
              placeholder: "ДД.ММ.ГГГГ",
              value: fromValue,
              readonly: "readonly"
            },
            length: "s",
            type: "dropdown",
            jsClass: fromJs
          }
        })
      .final-booking__to
        +input({
          title: {text: toTitle},
          input: {
            attr: {
              type: "text",
              placeholder: "ДД.ММ.ГГГГ",
              value: toValue,
              readonly: "readonly"
            },
            length: "s",
            type: "dropdown",
            jsClass: toJs
          }
        })
      +datepicker({
        jsClass: jsDatepicker,
        attr: {
          "hidden": "hidden"
        }
      })
    .final-booking__guests
      +dropdown({
        inputSettings: {
          title: { text: guestsTitle },
          input: {
            attr: {
              type: "text",
              placeholder: "Text",
              value: guestsInputValue,
              readonly: "readonly",
            },
            length: "l",
            type: "dropdown",
            jsClass: guestsInputJs
          }
        },
        control: {
          jsClass: guestsControlJs,
          attr: {"hidden": "hidden"}
        },
        lists: guestsLists
      })
    ul.final-booking__service-list
      each list in serviceList
        if list.type == "total"
          li(class="final-booking__service final-booking__service_total")
            div(class="final-booking__service-wrapper final-booking__service-wrapper_total")
              span(class="final-booking__service-title final-booking__service-title_total")=list.title
            span(class="final-booking__service-price final-booking__service-price_total")=list.price
        else 
          li(class="final-booking__service")
            .final-booking__service-wrapper
              span(class="final-booking__service-title")=list.title
              if list.sign === true
                span.final-booking__service-sign="i"
            span.final-booking__service-price=list.price
    .final-booking__confirm-button
      +button({
        type: "big",
        text: confirmText,
        attr: {"type": "submit"}
      })