mixin color-description(settings)
  - const {
  -   name = "for-change",
  -   index = "for-Change",
  -   color = "for-change",
  - } = settings
  - const colorClass = color ? `color-description__sample_color_${color}` : ""
  div.color-description
    div(class=["color-description__sample", colorClass])
    div.color-description__text
      p.color-description__name= name
      p.color-description__index= index