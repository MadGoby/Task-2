mixin text-sample(settings)
  - const {
  -   teg: {
  -     text: tegText = "for-change"
  -   },
  -   description: {
  -     text: descriptionText = "for-change",
  -   }
  - } = settings
  - let {
  -   teg: {
  -     type: tegType = "regular"
  -   },
  -   description: {
  -     type: descriptionType = "regular"
  -   }
  - } = settings
  - if(tegType) tegType = `text-sample__teg_type_${tegType}`
  - if(descriptionType) descriptionType = `text-sample__description_type_${descriptionType}`
  .text-sample
    p(class=["text-sample__teg", tegType])=tegText
    p(class=["text-sample__description", descriptionType])=descriptionText