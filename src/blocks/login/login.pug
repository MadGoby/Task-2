mixin login(settings)
  - let {
  -   action = "./for-change",
  -   title: { text: titleText = "For change" },
  -   confirm: { text: confirmText = "For change" },
  -   loginLink = "./for-change"
  - } = settings
  form(action=action).login
    .login__title
      +title({
        text: titleText,
        type: "big"
      })
    .login__inputs
      .login__email-input
        +input({
          title: {},
          input: {
            attr: {
              "type": "email",
              "placeholder": "Email"
            },
            length: "l",
            type: "simple"
          }
        })
      .login__pass-input
        +input({
          title: {},
          input: {
            attr: {
              "type": "password",
              "placeholder": "Пароль"
            },
            length: "l",
            type: "simple"
          }
        })
    .login__confirm-button
      +button({
        type: "big",
        text: confirmText,
        attr: {"type": "submit"}
      })
    .login__registration
      p.login__text="Нет аккаунта на Toxin?"
      a(class="login__link" href=loginLink)
        +button({
          type: "border",
          text: "создать",
          attr: {"type": "button"}
        })