mixin registration(settings)
  - const {
  -   action = "./for-change",
  -   title = "For change",
  -   loginLink = "./for-change"
  - } = settings
  form(action=action).registration
    .registration__title
      +title({
        text: title,
        type: "size_large"
      })
    .registration__personal-data
      .registration__name
        +input({
          title: {},
          input: {
            attr: {
              "type": "text",
              "placeholder": "Имя"
            },
            length: "long",
            type: "regular"
          }
        })
      .registration__surname
        +input({
          title: {},
          input: {
            attr: {
              "type": "text",
              "placeholder": "Фамилия"
            },
            length: "long",
            type: "regular"
          }
        })
      .registration__gender
        .registration__male
          +toggle({
            controller: {
              type: "radio",
              attr: {
                "type": "radio",
                "hidden": "hidden",
                "name": "gender",
                "value": "male",
                "checked": "checked"
              }
            },
            text: {
              text: "Мужчина"
            }
          })
        .registration__female
          +toggle({
            controller: {
              type: "radio",
              attr: {
                "type": "radio",
                "hidden": "hidden",
                "name": "gender",
                "value": "female"
              }
            },
            text: {
              text: "Женщина"
            }
          })
    .registration__birthday
      +input({
        title: { text: "дата рождения" },
        input: {
          attr: {
            type: "text",
            placeholder: "ДД.ММ.ГГГГ"
          },
          length: "long",
          type: "date"
        }
      })
    .registration__login-data
      .registration__login-title
        +title({text: "данные для входа в сервис"})
      .registration__email
        +input({
          title: {},
          input: {
            attr: {
              "type": "email",
              "placeholder": "Email"
            },
            length: "long",
            type: "regular"
          }
        })
      .registration__pass
        +input({
          title: {},
          input: {
            attr: {
              "type": "password",
              "placeholder": "Пароль"
            },
            length: "long",
            type: "regular"
          }
        })
      +toggle({
        controller: {
          type: "toggle",
          attr: {
            "type": "checkbox",
            "hidden": "hidden",
            "value": "female",
          }
        },
        text: {
          text: "Получать спецпредложения"
        }
      })
    .registration__confirm-button
      +button({
        type: "confirm",
        text: "зарегистрироваться",
        attrType: "submit",
      })
    .registration__login
      p.registration__text="Уже есть аккаунт на Toxin"
      a(class="registration__link" href=loginLink)
        +button({
          type: "border",
          text: "Войти",
        })
