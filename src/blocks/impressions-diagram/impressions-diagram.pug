mixin impressions-diagram(settings)
  - let text = "000 голосов"
  - let lines = [
  -   {text: "For change 1", type: "perfectly"},
  -   {text: "For change 2", type: "good"},
  -   {text: "For change 3", type: "satisfactorily"},
  -   {text: "For change 4", type: "disappointed"}
  - ]
  - if(settings) {
  -   if(settings.hasOwnProperty("text")) text = settings.text
  -   if(settings.hasOwnProperty("lines")) lines = settings.lines
  - }
  .impressions-diagram
    .impressions-diagram__reviews-wrapper
      p.impressions-diagram__reviews-count=text
    ul.impressions-diagram__description 
      each line in lines 
        - let text = ""
        - let type = ""
        - if(line) {
        -   if(line.hasOwnProperty("text")) text = line.text
        -   if(line.hasOwnProperty("type")) type = `impressions-diagram__description-line_${line.type}`
        - }
        li(class="impressions-diagram__description-line" class=type)=text