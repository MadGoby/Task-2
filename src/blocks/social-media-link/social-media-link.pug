mixin social-media-link(settings)
  - let { socialLinks= [{},{},{}] } = settings
  each socialLink in socialLinks
    - const {
    -   link = "./for-change",
    -   iconSrc = "./for-change",
    - } = socialLink
    - let {
    -   name = "for-change",
    -   position = false
    - } = socialLink
    - if(name) name = `social-media-link_to-${name}`
    - if(position) position = `social-media-link__icon_position_${position}`
    a(class=["social-media-link", name] href=link target="_blank" rel="noopener noreferrer")
      img(class=["social-media-link__icon", position] src=iconSrc)