mixin header(settings)
  - let {
  -   navigation: { 
  -     links = [
  -       {"text": "For change", "type": "bold"},
  -       {"text": "For change"},
  -       {"text": "For change"},
  -       {"text": "For change"}
  -     ],
  -     buttonJsClass = "js-for-change",
  -     navigationJsClass = "js-for-change"
  -   },
  -   authorized = false
  - } = settings
  .header
    .header__logo
      +logo({
        src: "img/logo-color.svg"
      })
    .header__navigation
      button(class="header__navigation-button" class=buttonJsClass)
        span.header__hamburger
      div(class="header__navigation-wrapper" class=navigationJsClass)
        +navigation({
          links: links
        })
    if authorized
      p.header__authorized= authorized
    else
      .header__buttons
        .header__login-button
          +button({
            type: "border",
            text: "войти",
            attr: {"type": "button"},
            height: "small"
          })
        .header__registration-button
          +button({
            type: "regular",
            text: "зарегистрироваться",
            attr: {"type": "button"},
            height: "small"
          })