mixin input(settings)
  - let { 
  -   title: {
  -     text: titleText = false,
  -     type: titleType = false,
  -     state: titleState = false
  -   },
  -   input: {
  -     length: inputLength = "long",
  -     type: inputType = "regular",
  -     attr: inputAttr = { placeholder: "For-change" },
  -     state: inputState = false,
  -     jsClass: inputJs = false,
  -     border: inputBorder = false
  -   }
  - } = settings
  - let wrapperType = false
  - if (titleType) titleType = `input__title-text_${titleType}`
  - if (inputLength) inputLength = `input__field_length_${inputLength}`
  - if (inputType === "dropdown" || inputType === "submit") wrapperType = inputType
  - if (inputType) inputType = `input__field_type_${inputType}`
  - if (inputState) inputState = `input__field_${inputState}`
  - if (inputBorder) inputBorder = `input__field_border_${inputBorder}`
  .input
    if titleText
      .input__title
        div(class="input__title-text" class=titleType)
          +title({
            text: titleText
          })
        if titleState
          p.input__state=titleState
    if wrapperType === "dropdown" || wrapperType === "submit"
      label(class="input__wrapper" class=`input__wrapper_type_${wrapperType}`)
        input(class="input__field", class=inputLength, class=inputType, class=inputState, class=inputJs)&attributes(inputAttr)
        if wrapperType === "submit"
          button(type="submit" class="input__submit-button")
    else
      input(class="input__field", class=inputLength, class=inputType, class=inputBorder, class=inputState, class=inputJs)&attributes(inputAttr)