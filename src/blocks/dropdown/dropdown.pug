mixin dropdown(settings)
  - const {
  -   inputSettings = {
  -     length: "average",
  -     type: "regular",
  -     attr: {placeholder: "For-change"},
  -     state: "",
  -     jsClass: "js-for-change"  
  -   },
  -   control: {
  -     attr = false
  -   },
  -   main: {
  -     dataType = false,
  -     outputType = false
  -   }
  - } = settings
  - let {
  -   control: { z = false },
  -   clearHidden = true,
  -   lists = [
  -     {text: "For Change", dataTarget: "forChange1", output: "0", minusTransparent: false, plusTransparent: false},
  -     {text: "For Change", dataTarget: "forChange2", output: "0", minusTransparent: false, plusTransparent: false},
  -     {text: "For Change", dataTarget: "forChange3", output: "0", minusTransparent: false, plusTransparent: false}
  -   ]
  - } = settings
  - if (z) z = `dropdown__control_z-index_${z}`
  - if (lists) {
  -   lists.forEach(function(list) {
  -     if(list.output == "0") list.minusTransparent = true
  -     if(list.output == "10") list.plusTransparent = true
  -     if(list.output > "0") clearHidden = false
  -   })
  - }
  div(class=["dropdown", "js-dropdown"] data-template=dataType, data-output=outputType)
    div.dropdown__input
      +input(inputSettings)
    div(class=["dropdown__control", "js-dropdown__control", z])&attributes(attr)
      ul.dropdown__list
        each list in lists
          li.dropdown__list-element
            span.dropdown__text=list.text
            .dropdown__calc
              if list.minusTransparent 
                button(class=["dropdown__button dropdown__button_transparent", "dropdown__button_type_minus"] type="button"  data-target=list.dataTarget data-action="minus")="-"
              else
                button(class=["dropdown__button", "dropdown__button_type_minus"] type="button" data-target=list.dataTarget data-action="minus")="-"
              output(class="dropdown__output" data-target=list.dataTarget)=list.output
              if list.plusTransparent
                button(class=["dropdown__button dropdown__button_transparent", "dropdown__button_type_plus"] type="button"  data-target=list.dataTarget data-action="plus")="+"
              else
                button(class=["dropdown__button", "dropdown__button_type_plus"] type="button" data-target=list.dataTarget data-action="plus")="+"
      .dropdown__submit-buttons
        .dropdown__clear-button
          +button({
            type: "text",
            text: "очистить",
            attr: {
              "type": "button",
              "data-target": "clear"
            }
          })
        .dropdown__submit-button
          +button({
            type: "text",
            text: "применить",
            attr: {
              "type": "button",
              "data-target": "submit",
            }
          })