mixin list(settings)
  - const {
  -   title: {
  -     text = "For Change",
  -     teg = "p",
  -     isBullet = false,
  -     isWithMargin = false,
  -   },
  -   isExpandable = false,
  -   opennessState = "",
  -   listType = "",
  -   itemList = [{
  -     controller: {
  -       type: "checkbox",
  -       attr: { "type": "checkbox", "hidden": "hidden" },
  -     },
  -     text: { text: "For change", },
  -   }],
  - } = settings
  - const bulletClass = isBullet ? "list__title_with-bullet" : ""
  - const marginClass = isWithMargin ? "list__title_with-margin" : ""
  - const jsListClass = isExpandable ? "js-list" : ""
  - const jsTitleClass = isExpandable ? "js-list__title" : ""
  - const jsContainerClass = isExpandable ? "js-list__container" : ""
  - const attrs = opennessState === "closed" ? { "hidden": "hidden" } : {}
  - const titleExpandedClass = opennessState ? `list__title_${opennessState}` : ""
  div(class=["list", jsListClass])
    div(class=["list__title", jsTitleClass, marginClass, bulletClass, titleExpandedClass])
      +title({
        text: text,
        teg: teg
      })
    ul(class=["list__container", jsContainerClass])&attributes(attrs)
      case listType
        when "toggles"
          each value in itemList
            li.list__item
              +toggle(value)
        default
          each text in itemList
            li.list__item.list__item_with-bullet
              p.list__text=text