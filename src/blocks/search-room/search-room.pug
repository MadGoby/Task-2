mixin search-room(settings)
  - const {
  -   action = "./for-change",
  -   title: {
  -     text: titleText = "For change"
  -   },
  -   period: {
  -     from: {
  -       title: fromTitle = "For change",
  -       value: fromValue = "ДД.ММ.ГГГГ",
  -     },
  -     to: {
  -       title: toTitle = "For change",
  -       value: toValue = "ДД.ММ.ГГГГ",
  -     }
  -   },
  -   guests: {
  -     title: { text: guestsTitle = "For change" },
  -     input: {
  -       value: guestsInputValue = "For Change",
  -     },
  -     lists = [
  -       {text: "For change 1", dataTarget: "for-change-1", output: "0"},
  -       {text: "For change 2", dataTarget: "for-change-2", output: "0"},
  -       {text: "For change 3", dataTarget: "for-change-3", output: "0"}
  -     ]
  -   },
  -   confirm: { text: confirmText = "For Change" }
  - } = settings
  form(action=action).search-room
    .search-room__title
      +title({
        text: titleText,
        type: "size_large"
      })
    .search-room__period
      +datepicker({
        input: {
          from: {
            title: {text: fromTitle},
            input: {
              attr: {
                type: "text",
                placeholder: "ДД.ММ.ГГГГ",
                value: fromValue,
                readonly: "readonly"
              },
              length: "short",
              type: "dropdown",
              jsClass: "js-input__field_from"
            }
          },
          to: {
            title: {text: toTitle},
            input: {
              attr: {
                type: "text",
                placeholder: "ДД.ММ.ГГГГ",
                value: toValue,
                readonly: "readonly"
              },
              length: "short",
              type: "dropdown",
              jsClass: "js-input__field_to"
            }
          }
        },
        main: {
          jsClass: "js-datepicker"
        },
        attr: {
          "hidden": "hidden"
        }
      })
    .search-room__guests
      +dropdown({
        inputSettings: {
          title: {text: guestsTitle},
          input: {
            attr: {
              type: "text",
              placeholder: "Text",
              value: guestsInputValue,
              readonly: "readonly",
            },
            length: "long",
            type: "dropdown",
            jsClass: "js-input__field"
          }
        },
        control: {
          attr: {"hidden": "hidden"}
        },
        lists: lists,
        main: {
          dataType: "guests",
          outputType: "sum"
        }
      })
    .search-room__confirm-button
      +button({
        type: "confirm",
        text: confirmText,
        attr: {"type": "submit"}
      })