.cards
  +logo({
    src: "img/logo.svg",
    type: "in-corner"
  })
  .cards__content
    .cards__column
      .cards__search-room
        +search-room({
          action: "./for-change"
        })
          +search-room__title({
            text: "Найдём номера под ваши пожелания"
          })
          +search-room__period({})
            +search-room__from()
              +input()
                +input__title()
                  +title({
                    text: "прибытие"
                  })
                +input__field({
                  attr: {
                    "type": "text",
                    "placeholder": "ДД.ММ.ГГГГ",
                    "value": "ДД.ММ.ГГГГ",
                    "readonly": "readonly"
                  },
                  length: "s",
                  type: "dropdown",
                  jsClass: "js-input__field_from-4",
                  })
            +search-room__to()
              +input()
                +input__title()
                  +title({
                    text: "выезд"
                  })
                +input__field({
                  attr: {
                    "type": "text",
                    "placeholder": "ДД.ММ.ГГГГ",
                    "value": "ДД.ММ.ГГГГ",
                    "readonly": "readonly"
                  },
                  length: "s",
                  type: "dropdown",
                  jsClass: "js-input__field_to-4",
                })
            +datepicker({
              jsClass: "js-datepicker-4",
              attr: {
                "hidden": "hidden"
              }
            })
          +search-room__guests()
            +dropdown()
              +dropdown__input({expanded: false})
                +input()
                  +input__title({type: "with-state"})
                    +title({
                      text: "гости"
                    })
                  +input__field({
                    attr: {
                      "type": "text",
                      "placeholder": "Text",
                      "value": "Сколько гостей",
                      "readonly": "readonly"
                    },
                    length: "l",
                    type: "dropdown",
                    jsClass: "js-input__field-6"
                  })
              +dropdown__control({
                jsClass: "js-dropdown__control-6",
                attr: {"hidden": "hidden"}
              })
                +dropdown__list({
                  elements: [
                    { 
                      text: "взрослые",
                      dataTarget: "adult",
                      output: "0"
                    },
                    { 
                      text: "дети",
                      dataTarget: "child",
                      output: "0"
                    },
                    { 
                      text: "младенцы",
                      dataTarget: "baby",
                      output: "0",
                    },
                  ]
                })
                +dropdown__submit-buttons({hidden: true})
          +search-room__confirm-button()
            +button({
              type: "big",
              text: "подобрать номер",
              attr: {"type": "submit"}
            })
      .cards__registration
        +registration({action: "./for-change"})
          +registration__title({text: "Регистрация аккаунта"})
          +registration__personal-data()
            +registration__name
              +input()
                +input__field({
                  attr: {
                    "type": "text",
                    "placeholder": "Имя"
                  },
                  length: "l",
                  type: "simple"
                })
            +registration__surname
              +input()
                +input__field({
                  attr: {
                    "type": "text",
                    "placeholder": "Фамилия"
                  },
                  length: "l",
                  type: "simple"
                })
            +registration__gender()
              +toggle()
                +toggle__controller({
                  type: "radio",
                  attr: {
                    "type": "radio",
                    "hidden": "hidden",
                    "name": "gender",
                    "value": "male",
                    "checked": "checked"
                  },
                  text: "Мужчина"
                })
                +toggle__controller({
                  type: "radio",
                  attr: {
                    "type": "radio",
                    "hidden": "hidden",
                    "name": "gender",
                    "value": "female",
                  },
                  text: "Женщина"
                })
          +registration__birthday()
            +input()
              +input__title()
                +title({
                  text: "дата рождения"
                })
              +input__field({
                attr: {
                  "type": "text",
                  "placeholder": "ДД.ММ.ГГ",
                },
                length: "l",
                type: "date"
              })
          +registration__login-data
            +registration__email()
              +input()
                +input__title()
                  +title({
                    text: "данные для входа в сервис"
                  })
                +input__field({
                  attr: {
                    "type": "email",
                    "placeholder": "Email"
                  },
                  length: "l",
                  type: "simple"
                })
            +registration__pass()
              +input()
                +input__field({
                  attr: {
                    "type": "password",
                    "placeholder": "Пароль"
                  },
                  length: "l",
                  type: "simple"
                })
            +toggle()
              +toggle__controller({
                type: "toggle",
                attr: {
                  "type": "checkbox",
                  "hidden": "hidden"
                },
                text: "Получать спецпредложения"
              })
          +registration__confirm-button()
            +button({
              type: "big",
              text: "перейти к оплате",
              attr: {"type": "submit"}
            })
          +registration__login()
            +registration__text({text: "Уже есть аккаунт на Toxin"})
            a(href="./for-change").registration__link 
              +button({
                type: "border",
                text: "войти",
                attr: {"type": "button"}
              })
