include ../../blocks/logo/logo.pug
include ../../blocks/color-description/color-description.pug
include ../../blocks/text-sample/text-sample.pug

.content-types
  +logo({
    src: "img/logo.svg",
    type: "in-corner"
  })
  .content-types__wrapper
    .content-types__colors
      +color-description()
        +color-description__sample({type: "shade100"})
        +color-description__text({name: "Dark Shade 100%", index: "#1F2041"})
      +color-description()
        +color-description__sample({type: "shade75"})
        +color-description__text({name: "Dark Shade 75%", index: "#1F2041"})
      +color-description()
        +color-description__sample({type: "shade50"})
        +color-description__text({name: "Dark Shade 50%", index: "#1F2041"})
      +color-description()
        +color-description__sample({type: "shade25"})
        +color-description__text({name: "Dark Shade 25%", index: "#1F2041"})
      +color-description()
        +color-description__sample({type: "shade5"})
        +color-description__text({name: "Dark Shade 5%", index: "#1F2041"})
      +color-description()
        +color-description__sample({type: "purple"})
        +color-description__text({name: "Purple", index: "#BC9CFF"})
      +color-description()
        +color-description__sample({type: "green"})
        +color-description__text({name: "Green", index: "#6FCF97"})
    .content-types__text
      +text-sample()
        +text-sample__teg({
          type: "h1",
          text: "H1"
        })
        +text-sample__description({
          type: "h1",
          text: "This one is the sub-section or widget title"
        })
      +text-sample()
        +text-sample__teg({
          type: "h2",
          text: "H2"
        })
        +text-sample__description({
          type: "h2",
          text: "Next one is the item name inside widgets"
        })
      +text-sample()
        +text-sample__teg({
          type: "h3",
          text: "H3"
        })
        +text-sample__description({
          type: "h3",
          text: "This is a label or CTA text"
        })
      +text-sample()
        +text-sample__teg({
          type: "normal",
          text: "Body"
        })
        +text-sample__description({
          type: "normal",
          text: "This is the body text which is used for most of the design, like paragraphs, lists, etc."
        })
