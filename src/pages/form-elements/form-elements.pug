+page-head({title: "Form-Elements", description: "Form Elements from UI-Kit"})
  body.body
    div.form-elements
      +logo({
        imgSrc: "logo.svg",
        isInCorner: true
      })
      div.form-elements__content
        div.form-elements__input-types
          div.form-elements__text-input
            +input({
              titleText: "text field",
              titleState: "default",
              attrs: { placeholder: "Email" },
            })
          div.form-elements__text-input
            +input({
              titleText: "text field",
              titleState: "hover / focus",
              isDarkBorder: true,
              attrs: {
                placeholder: "Text",
                value: "This is pretty awesome",
              },
            })
          div.form-elements__dropdown.js-form-elements__dropdown
            +dropdown({
              inputSettings: {
                titleText: "dropdown",
                attrs: {
                  placeholder: "Text",
                  value: "Сколько гостей",
                },
                length: "long",
              },
              isClosed: true,
              lists: [
                {text: "взрослые", dataTarget: "adult", output: "0"},
                {text: "дети", dataTarget: "child", output: "0"},
                {text: "младенцы", dataTarget: "baby", output: "0"}
              ],
            })
          div.form-elements__masked-input.js-form-elements__masked-input
            +input({
              titleText: "masked text field",
              isDateMask: true,
              attrs: { placeholder: "ДД.ММ.ГГГГ", },
            })
          div.form-elements__date-dropdowns.js-form-elements__date-dropdowns
            +datepicker({
              inputType: 'double',
              inputSettings: {
                from: {
                  titleText: "date Dropdown",
                  length: "short",
                  attrs: {
                    value: "ДД.ММ.ГГГГ"
                  },
                },
                to: {
                  titleText: "date Dropdown",
                  length: "short",
                  attrs: {
                    value: "19.08.2019"
                  },
                }
              },
              isCalendarClosed: true,
            })
          div.form-elements__filter-dropdown.js-form-elements__filter-dropdown
            +datepicker({
              inputType: 'total',
              inputSettings: {
                total: {
                  titleText: "filter date dropdown",
                  attrs: {
                    value: "19 авг - 23 авг",
                  },
                }
              },
              isCalendarClosed: true,
              isSmall: true,
            })
          div.form-elements__subscription-input
            form(action="./for-change").form-elements__subscription-form
              +subscription-input({
                titleText: "subscription text field",
              })
        div.form-elements__toggle-types
          div.form-elements__checkboxes
            div.form-elements__checkboxes-title
              +title({
                text: "Checkbox Buttons"
              })
            +checkbox-button({
              text: "Можно курить",
            })
            +checkbox-button({
              text: "Можно с питомцами",
              isChecked: true,
            })
            +checkbox-button({
              text: "Можно пригласить гостей (до 10 человек)",
              isChecked: true,
              isShort: true,
            })
          div.form-elements__radios
            div.form-elements__radios-title
              +title({
                text: "Radio Buttons"
              })
            div.form-elements__radio
              +radio-button({
                text: "Мужчина",
                name: "gender",
                value: "male",
                isChecked: true,
              })
            div.form-elements__radio
              +radio-button({
                text: "Женщина",
                name: "gender",
                value: "female",
              })
          div.form-elements__toggles
            div.form-elements__toggles-title
              +title({
                text: "Toggle"
              })
            +toggle({
              text: "Получать спецпредложения",
              isChecked: true,
            })
            +toggle({
              text: "Получать спецпредложения",
            })
          div.form-elements__likes
            div.form-elements__likes-title
              +title({
                text: "like button"
              })
            div.form-elements__like.form-elements__like_unchecked.js-form-elements__like_unchecked
              +like-button({
                counter: "2",
                isChecked: false,
              })
            div.form-elements__like.form-elements__like_checked.js-form-elements__like_checked
              +like-button({
                counter: "12",
                isChecked: true,
              })
          div.form-elements__ratings
            div.form-elements__rating-title
              +title({
                text: "rate button"
              })
            div.form-elements__rating.js-form-elements__rating_number_1
              +stars-rating({rating: "4"})
            div.form-elements__rating.js-form-elements__rating_number_2
              +stars-rating({rating: "5"})
        div.form-elements__button-types
          div.form-elements__slider.js-form-elements__slider
            +slider({
              title: "range slider",
            })
          div.form-elements__buttons
            div.form-elements__buttons-title
              +title({text: "buttons"})
            div.form-elements__simple-buttons
              div.form-elements__button-wrapp
                +button({
                  text: "click me",
                })
              div.form-elements__button-wrapp
                +button({
                  text: "click me",
                  isTransparent: true,
                })
            div.form-elements__border-buttons
              div.form-elements__button-wrapp
                +button({
                  text: "click me",
                  isBorder: true,
                })
              div.form-elements__button-wrapp
                +button({
                  text: "click me",
                  isBorder: true,
                  isTransparent: true,
                })
            div.form-elements__text-buttons
              div.form-elements__button-wrapp
                +text-button({
                  text: "click me",
                })
              div.form-elements__button-wrapp
                +text-button({
                  text: "click me",
                  isDark: true,
                })
            div.form-elements__big-button
              +confirm-button({
                text: "перейти к оплате",
              })
          div.form-elements__pagination.js-form-elements__pagination
            +content-navigation({
              title: "pagination",
              counter: "1 - 12 из 100+ вариантов аренды"
            })
        div.form-elements__dropdown-types
          div.form-elements__fittings-dropdown
            div.form-elements__closed-dropdown.js-form-elements__closed-dropdown
              +dropdown({
                inputSettings: {
                  titleText: "dropdown",
                  titleState: "default",
                },
                isClosed: true,
                lists: [
                  {text: "спальни", dataTarget: "bedroom", output: "2"},
                  {text: "кровати", dataTarget: "bed", output: "2"},
                  {text: "ванные комнаты", dataTarget: "bathroom", output: "0"}
                ],
                main: {
                  dataType: "rooms",
                  outputType: "oneByOne"
                }
              })
            div.form-elements__expanded-dropdown.js-form-elements__expanded-dropdown
              +dropdown({
                inputSettings: {
                  titleText: "dropdown",
                  titleState: "expanded" ,
                },
                lists: [
                  {text: "спальни", dataTarget: "bedroom", output: "2"},
                  {text: "кровати", dataTarget: "bed", output: "2"},
                  {text: "ванные комнаты", dataTarget: "bathroom", output: "0"}
                ],
                main: {
                  dataType: "rooms",
                  outputType: "oneByOne"
                }
              })
          div.form-elements__guests-dropdown.js-form-elements__guests-dropdown_counter_0
            +dropdown({
              inputSettings: {
                titleText: "dropdown",
                length: "long",
              },
              lists: [
                {text: "взрослые", dataTarget: "adult", output: "0"},
                {text: "дети", dataTarget: "child", output: "0"},
                {text: "младенцы", dataTarget: "baby", output: "0"}
              ],
              main: {
                dataType: "guests",
                outputType: "sum"
              }
            })
          div.form-elements__guests-dropdown.js-form-elements__guests-dropdown_counter_3
            +dropdown({
              inputSettings: {
                titleText: "dropdown",
                length: "long",
              },
              lists: [
                {text: "взрослые", dataTarget: "adult", output: "2"},
                {text: "дети", dataTarget: "child", output: "1"},
                {text: "младенцы", dataTarget: "baby", output: "0"}
              ],
              main: {
                dataType: "guests",
                outputType: "sum"
              }
            })
        div.form-elements__list-types
          div.form-elements__expandable-lists
            div.form-elements__closed-list.js-form-elements__closed-list
              +list({
                title: {
                  text: "expandable checkbox list",
                },
                isExpandable: true,
                opennessState: "closed",
                listType: "toggles",
                itemList: [
                  {
                    text: "Завтрак",
                  },
                  {
                    text: "Письменный стол",
                    isChecked: true,
                  },
                  {
                    text: "Стул для кормления",
                    isChecked: true,
                  },
                  {
                    text: "Кроватка",
                    isChecked: true,
                  },
                  {
                    text: "Телевизор",
                  },
                  {
                    text: "Шампунь",
                  },
                ]
              })
            div.form-elements__expanded-list.js-form-elements__expanded-list
              +list({
                title: {
                  text: "expandable checkbox list",
                },
                isExpandable: true,
                opennessState: "expanded",
                listType: "toggles",
                itemList: [
                  {
                    text: "Завтрак",
                  },
                  {
                    text: "Письменный стол",
                    isChecked: true,
                  },
                  {
                    text: "Стул для кормления",
                    isChecked: true,
                  },
                  {
                    text: "Кроватка",
                    isChecked: true,
                  },
                  {
                    text: "Телевизор",
                  },
                  {
                    text: "Шампунь",
                  },
                ]
              })
          div.form-elements__rich-list
            +list({
              title: {
                text: "rich Checkbox Buttons",
              },
              listType: "toggles",
              itemList: [
                {
                  title: "Широкий коридор",
                  text: "Ширина коридоров в номере не менее 91 см.",
                  isShort: true,
                },
                {
                  title: "Помощник для инвалидов",
                  text: "На 1 этаже вас встретит специалист  и проводит до номера.",
                },
              ],
              container: false,
            })
          div.form-elements__bullet-list
            +list({
              title: {
                text: "bullet list",
              },
              listType: "text",
              itemList: [
                "Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00"
              ]
            })
        div.form-elements__additions
          div.form-elements__positive-features
            +positive-feature({
              imgAttrs: {
                alt: "Abstract image of a modern house",
                src: "smile.svg"
              },
              title: "Комфорт",
              description: "Шумопоглощающие стены",
              isWithBorder: true,
            })
            +positive-feature({
              imgAttrs: {
                alt: "Abstract image of a modern house",
                src: "house.svg"
              },
              title: "Удобство",
              description: "Окно в каждой из спален",
              isWithBorder: true,
            })
          div.form-elements__user-comment.js-form-elements__user-comment
            +user-comment({
              title: {
                imgSrc: "user.jpg",
                userName: "Мурад Сарафанов",
                userAge: "5 дней назад"
              },
              main: {
                isLiked: true,
                likeCounter: "12",
                commentText: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
              }
            })