include ../../blocks/slider/slider
include ../../blocks/button/button
include ../../blocks/dropdown/dropdown
include ../../blocks/list/list
include ../../blocks/positive-feature/positive-feature
include ../../blocks/title/title
include ../../blocks/user-comment/user-comment
include ../../blocks/content-navigation/content-navigation
