+page-head({title: "Landing Page", desc: "Landing page of the hotel room website."})
  body
    .landing-page
      header.landing-page__header
        +header({
          nav: { 
            links: [
              {"text": "О нас"},
              {"text": "Услуги", "type": "expanded"},
              {"text": "Вакансии"},
              {"text": "Новости"},
              {"text": "Соглашения", "type": "expanded"}
            ],
            buttonJsClass: "js-header-nav-button",
            navJsClass: "js-header-nav"
          }
        })
      main.landing-page__main 
        +search-room({
          title: {text: "Найдём номера под ваши пожелания"},
          period: {
            from: {
              title: "прибытие",
              value: "ДД.ММ.ГГГГ",
              jsClass: "js-input__field_from"
            },
            to: {
              title: "выезд",
              value: "ДД.ММ.ГГГГ",
              jsClass: "js-input__field_to"
            },
            jsDatepicker: "js-datepicker"
          },
          guests: {
            title: { text: "гости" },
            input: {
              value: "Сколько гостей",
              jsClass: "js-input__field"
            },
            control: { jsClass: "js-dropdown__control" },
            lists: [
              {text: "взрослые", dataTarget: "adult", output: "0"},
              {text: "дети", dataTarget: "child", output: "0"},
              {text: "младенцы", dataTarget: "baby", output: "0"}
            ]
          },
          confirm: {text: "подобрать номер"}
        })
      footer.landing-page__footer
        +footer({
          description: {
            text: "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
          },
          lists: [
            [
              {"text": "навигация"}, 
              {"text": "О нас"},
              {"text": "Новости"},
              {"text": "Служба поддержки"},
              {"text": "Услуги"}
            ],
            [
              {"text": "о нас"},
              {"text": "О сервисе"},
              {"text": "Наша команда"},
              {"text": "Вакансии"},
              {"text": "Инвесторы"}
            ],
            [
              {"text": "Служба поддержки"}, 
              {"text": "Соглашения"},
              {"text": "Сообщества"},
              {"text": "Связь с нами"}
            ]
          ],
          subscribe: {
            title: "Подписка",
            text: "Получайте специальные предложения и новости сервиса"
          }
        })
        +copyright({
          text: "Copyright © 2018 Toxin отель. Все права защищены.",
          links: [
            {
              "name": "twitter",
              "iconSrc": "img/twitter.svg"
            },
            {
              "name": "facebook",
              "iconSrc": "img/facebook.svg"
            },
            {
              "name": "instagram",
              "iconSrc": "img/instagram.svg"
            }
          ]
        })