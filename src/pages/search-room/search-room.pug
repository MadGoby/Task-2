+page-head({title: "Search Room", description: "Search page of the hotel room website."})
  body
    .search-room-page
      header.search-room-page__header
        +header({
          navigation: { 
            links: [
              {"text": "О нас"},
              {"text": "Услуги", "type": "expanded"},
              {"text": "Вакансии"},
              {"text": "Новости"},
              {"text": "Соглашения", "type": "expanded"}
            ],
            buttonJsClass: "js-header__navigation-button",
            navigationJsClass: "js-header__navigation"
          },
          mainJsClass: "js-header"
        })
      main.search-room-page__main
        .search-room-page__sidebar-wrapper
          +sidebar()
        article.search-room-page__rooms
          .search-room-page__rooms-title
            +title({
              text: "Номера, которые мы для вас подобрали",
              type: "size_large",
              teg: "h1"
            })
          .search-room-page__rooms-wrapper
            include ../search-room-cards/search-room-cards.pug
          .search-room-page__rooms-navigation
            +content-navigation({
              title: false,
              jsClass: "js-content-navigation",
              counter: "1 – 12 из 100+ вариантов аренды"
            })
      footer.search-room-page__footer
        +footer({
          description: {
            text: "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
          },
          lists: [
            [
              {"title": "навигация"}, 
              {"text": "О нас"},
              {"text": "Новости"},
              {"text": "Служба поддержки"},
              {"text": "Услуги"}
            ],
            [
              {"title": "о нас"},
              {"text": "О сервисе"},
              {"text": "Наша команда"},
              {"text": "Вакансии"},
              {"text": "Инвесторы"}
            ],
            [
              {"title": "Служба поддержки"}, 
              {"text": "Соглашения"},
              {"text": "Сообщества"},
              {"text": "Связь с нами"}
            ]
          ],
          subscribe: {
            title: "Подписка",
            text: "Получайте специальные предложения и новости сервиса"
          },
          footer: false,
          copyright: false
        })
        +copyright({
          text: "Copyright © 2018 Toxin отель. Все права защищены.",
          links: [
            {
              "name": "twitter",
              "iconSrc": "img/twitter.svg"
            },
            {
              "name": "facebook",
              "iconSrc": "img/facebook.svg"
            },
            {
              "name": "instagram",
              "iconSrc": "img/instagram.svg"
            }
          ]
        })