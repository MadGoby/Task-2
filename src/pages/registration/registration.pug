include ../../blocks/header/header.pug
include ../../blocks/logo/logo.pug
include ../../blocks/nav/nav.pug
include ../../blocks/button/button.pug
include ../../blocks/footer/footer.pug
include ../../blocks/social-media-link/social-media-link.pug
include ../../blocks/copyright/copyright.pug
include ../../blocks/input/input.pug
include ../../blocks/registration/registration.pug
include ../../blocks/button/button.pug
include ../../blocks/toggle/toggle.pug
include ../../blocks/title/title.pug

doctype html
html
  head
    title 
    meta(charset="utf-8")
    meta(name="description" content="Registation page of the hotel room website.")
    meta(name="keywords" content="HTML, CSS, JavaScript")
    meta(name="viewport" content="initial-scale=1.0, width=device-width")
  body
    .registration-page
      header.registration-page__header
        +header()
          +header__logo()
            +logo({
              src: "img/logo-color.svg"
            })
          +header__nav()
            +nav()
              +nav__link({
                links: [
                  {"text": "О нас",},
                  {"text": "Услуги", "type": "expanded"},
                  {"text": "Вакансии"},
                  {"text": "Новости"},
                  {"text": "Соглашения", "type": "expanded"}
                ]
              })
          +header__buttons()
      main.registration-page__main 
        .registration-page__form 
          +registration({action: "./for-change"})
            +registration__title({text: "Регистрация аккаунта"})
            +registration__personal-data()
              +registration__name
                +input()
                  +input__field({
                    attr: {
                      "type": "text",
                      "placeholder": "Имя"
                    },
                    length: "l",
                    type: "simple"
                  })
              +registration__surname
                +input()
                  +input__field({
                    attr: {
                      "type": "text",
                      "placeholder": "Фамилия"
                    },
                    length: "l",
                    type: "simple"
                  })
              +registration__gender()
                +toggle()
                  +toggle__controller({
                    type: "radio",
                    attr: {
                      "type": "radio",
                      "hidden": "hidden",
                      "name": "gender",
                      "value": "male",
                      "checked": "checked"
                    },
                    text: "Мужчина"
                  })
                  +toggle__controller({
                    type: "radio",
                    attr: {
                      "type": "radio",
                      "hidden": "hidden",
                      "name": "gender",
                      "value": "female",
                    },
                    text: "Женщина"
                  })
            +registration__birthday()
              +input()
                +input__title()
                  +title({
                    text: "дата рождения"
                  })
                +input__field({
                  attr: {
                    "type": "text",
                    "placeholder": "ДД.ММ.ГГГГ",
                  },
                  length: "l",
                  type: "date"
                })
            +registration__login-data
              +registration__email
                +input()
                  +input__title()
                    +title({
                      text: "данные для входа в сервис"
                    })
                  +input__field({
                    attr: {
                      "type": "email",
                      "placeholder": "Email"
                    },
                    length: "l",
                    type: "simple"
                  })
              +registration__pass
                +input()
                  +input__field({
                    attr: {
                      "type": "password",
                      "placeholder": "Пароль"
                    },
                    length: "l",
                    type: "simple"
                  })
              +toggle()
                +toggle__controller({
                  type: "toggle",
                  attr: {
                    "type": "checkbox",
                    "hidden": "hidden"
                  },
                  text: "Получать спецпредложения"
                })
            +registration__confirm-button()
              +button({
                type: "big",
                text: "зарегистрироваться",
                attr: {"type": "submit"}
              })
            +registration__login()
              +registration__text({text: "Уже есть аккаунт на Toxin"})
              a(href="./for-change").registration__link 
                +button({
                  type: "border",
                  text: "войти",
                  attr: {"type": "button"}
                })
      footer.registration-page__footer
        +footer()
          +footer__description({
            text: "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
          })
          +footer__nav({
            lists: [
              [
                {"text": "навигация"}, 
                {"text": "О нас"},
                {"text": "Новости"},
                {"text": "Служба поддержки"},
                {"text": "Услуги"}
              ],
              [
                {"text": "о нас"}, 
                {"text": "О сервисе"},
                {"text": "Наша команда"},
                {"text": "Вакансии"},
                {"text": "Инвесторы"}
              ],
              [
                {"text": "Служба поддержки"}, 
                {"text": "Соглашения"},
                {"text": "Сообщества"},
                {"text": "Связь с нами"}
              ]
            ]
          })
          +footer__subscribe({
            title: "Подписка",
            text: "Получайте специальные предложения и новости сервиса"
          })
        +copyright({
          text: "Copyright © 2018 Toxin отель. Все права защищены."
        })
          +copyright__social-media()
            +social-media-link({
              socialLinks: [
                {
                  "name": "twitter",
                  "iconSrc": "img/twitter.svg"
                },
                {
                  "name": "facebook",
                  "iconSrc": "img/facebook.svg"
                },
                {
                  "name": "instagram",
                  "iconSrc": "img/instagram.svg"
                }
              ]
            })