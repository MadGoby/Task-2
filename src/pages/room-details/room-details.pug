+page-head({title: "Room Details", desc: "Room Details page of the hotel room website."})
  body
    .room-details
      header.room-details__header
        +header({
          nav: { 
            links: [
              {"text": "О нас"},
              {"text": "Услуги", "type": "expanded"},
              {"text": "Вакансии"},
              {"text": "Новости"},
              {"text": "Соглашения", "type": "expanded"}
            ],
            buttonJsClass: "js-header-nav-button",
            navJsClass: "js-header-nav"
          }
        })
      main.room-details__main
        .room-details__photos 
          img(src="./img/room-photo-big.jpg", alt="Room photo"  class="room-photo room-photo_big")
          .room-details__photos-wrapper
            img(src="./img/room-photo-small1.jpg", alt="Room photo" class="room-photo room-photo_small_upper")
            img(src="./img/room-photo-small2.jpg", alt="Room photo" class="room-photo room-photo_small_lower")
        .room-details__details
          .room-details__details-wrapper
            .room-details__final-booking
              +final-booking({
                roomInfo: {
                  number: "888",
                  price: "9 990",
                  type: "luxury"
                },
                period: {
                  from: {
                    title: "прибытие",
                    value: "19.08.2019",
                    jsClass: "js-input__field_from"
                  },
                  to: {
                    title: "выезд",
                    value: "23.08.2019",
                    jsClass: "js-input__field_to"
                  },
                  jsDatepicker: "js-datepicker"
                },
                guests: {
                  title: { text: "гости" },
                  input: {
                    value: "3 гостя",
                    jsClass: "js-input__field"
                  },
                  control: { jsClass: "js-dropdown__control" },
                  lists: [
                    {text: "взрослые", dataTarget: "adult", output: "2"},
                    {text: "дети", dataTarget: "child", output: "1"},
                    {text: "младенцы", dataTarget: "baby", output: "0"}
                  ]
                },
                serviceList: [
                  {
                    title: "9 990₽ х 4 суток",
                    price: "39 960₽"
                  },
                  {
                    title: "Сбор за услуги: скидка 2 179₽",
                    price: "0₽",
                    sign: true
                  },
                  {
                    title: "Сбор за дополнительные услуги",
                    price: "300₽",
                    sign: true
                  },
                  {
                    title: "Итого",
                    price: "38 081₽",
                    type: "total"
                  }
                ],
                confirm: { text: "забронировать"}
              })
            .room-details__float-wrapper
              .room-details__positive-features
                +title({
                  text: "Сведения о номере",
                  type: "middle",
                  teg: "h2"
                })
                +positive-feature({
                  border: "border_bottom",
                  img: {
                    attr: {
                      "alt": "Feeling comfortable",
                      "src": "img/smile.svg"
                    }
                  },
                  text: {
                    title: "Комфорт",
                    desc: "Шумопоглощающие стены"
                  }
                })
                +positive-feature({
                  border: "border_bottom",
                  img: {
                    attr: {
                      "alt": "Abstract image of a modern house",
                      "src": "img/house.svg"
                    }
                  },
                  text: {
                    title: "Удобство",
                    desc: "Окно в каждой из спален"
                  }
                })
                +positive-feature({
                  img: {
                    attr: {
                      "alt": "cozy flame",
                      "src": "img/flame.svg"
                    }
                  },
                  text: {
                    title: "Уют",
                    desc: "Номер оснащён камином"
                  }
                })
              .room-details__impressions
                .room-details__impression-title
                  +title({
                    text: "Впечатления от номера",
                    type: "middle",
                    teg: "h2"
                  })
                +impressions-diagram({
                  text: "",
                  lines: [
                    {text: "Великолепно", type: "perfectly"},
                    {text: "Хорошо", type: "good"},
                    {text: "Удовлетворительно", type: "satisfactorily"},
                    {text: "Разочарован", type: "disappointed"}
                  ]
                })
              .room-details__comments
                .room-details__comments-title
                  +title({
                    text: "Отзывы посетителей номера",
                    type: "middle",
                    teg: "h2"
                  })
                  span.room-details__comments-count="2 отзыва"
                .room-details__comment
                  +user-comment({
                    title: {
                      imgAttr: {
                        "alt": "Profile picture",
                        "src": "img/user.jpg"
                      },
                      name: "Мурад Сарафанов",
                      age: "5 дней назад"
                    },
                    main: {
                      toggle: {
                        checked: true,
                        text: "12"
                      },
                      text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
                    }
                  })
                .room-details__comment
                  +user-comment({
                    title: {
                      imgAttr: {
                        "alt": "Profile picture",
                        "src": "img/user2.jpg"
                      },
                      name: "Патрисия Стёклышкова",
                      age: "Неделю назад"
                    },
                    main: {
                      toggle: {
                        checked: false,
                        text: "2"
                      },
                      text: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент."
                    }
                  })
              .room-details__rules
                +list({
                  title: {
                    text: "Правила",
                    type: "middle",
                    bullet: true,
                    margin: true,
                    teg: "h2"
                  },
                  textList: [
                    "Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00"
                  ]
                })
              .room-details__cancellation
                .cancellation
                  .cancellation__title
                    +title({
                      text: "Отмена",
                      type: "middle",
                      teg: "h2"
                    })
                  p.cancellation__text="Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги."
      footer.room-details__footer
        +footer({
          description: {
            text: "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
          },
          lists: [
            [
              {"text": "навигация"}, 
              {"text": "О нас"},
              {"text": "Новости"},
              {"text": "Служба поддержки"},
              {"text": "Услуги"}
            ],
            [
              {"text": "о нас"},
              {"text": "О сервисе"},
              {"text": "Наша команда"},
              {"text": "Вакансии"},
              {"text": "Инвесторы"}
            ],
            [
              {"text": "Служба поддержки"}, 
              {"text": "Соглашения"},
              {"text": "Сообщества"},
              {"text": "Связь с нами"}
            ]
          ],
          subscribe: {
            title: "Подписка",
            text: "Получайте специальные предложения и новости сервиса"
          }
        })
        +copyright({
          text: "Copyright © 2018 Toxin отель. Все права защищены.",
          links: [
            {
              "name": "twitter",
              "iconSrc": "img/twitter.svg"
            },
            {
              "name": "facebook",
              "iconSrc": "img/facebook.svg"
            },
            {
              "name": "instagram",
              "iconSrc": "img/instagram.svg"
            }
          ]
        })